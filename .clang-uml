compilation_database_dir: debug
output_directory: docs/diagrams
diagrams:
  main_package:
    type: package
    glob:
      - src/**/*.h
      - src/**/*.cc
    include:
      namespaces:
        - clanguml
    using_namespace:
      - clanguml
    plantuml:
      before:
        - 'title clang-uml namespaces'
  config_class:
    type: class
    glob:
      - src/config/config.h
      - src/config/config.cc
    include:
      namespaces:
        - clanguml::config
    using_namespace:
      - clanguml::config
    plantuml:
      before:
        - 'title clang-uml configuration model'
  decorators_class:
    type: class
    glob:
      - src/decorators/decorators.h
      - src/decorators/decorators.cc
    include:
      namespaces:
        - clanguml::decorators
    using_namespace:
      - clanguml::decorators
    plantuml:
      before:
        - 'title clang-uml decorators model'