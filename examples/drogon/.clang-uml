compilation_database_dir: build
output_directory: puml
diagrams:
  all_classes_diagram:
    type: class
    glob:
      - lib/inc/drogon/*.h
    using_namespace:
      - drogon
    include:
      namespaces:
        - drogon
    exclude:
      namespaces:
        - drogon::internal
        - drogon::test
      access:
        - public
        - protected
        - private
  drobjectbase_hierarchy:
    type: class
    glob:
      - lib/inc/drogon/*.h
    using_namespace:
      - drogon
    include:
      namespaces:
        - drogon
      subclasses:
        - drogon::DrObjectBase
      relationships:
        - inheritance
    exclude:
      namespaces:
        - drogon::internal
        - drogon::test
      access:
        - public
        - protected
        - private
