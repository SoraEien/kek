compilation_database_dir: ..
output_directory: puml
diagrams:
  t00002_class:
    type: class
    glob:
      - ../../tests/t00002/t00002.cc
    comment_parser: clang
    using_namespace:
      - clanguml::t00002
    include:
      namespaces:
        - clanguml::t00002
    plantuml:
      after:
        - 'note left of @A(A) : {{ comment("A") }}'
        - 'note top of @A(B) : {{ comment("clanguml::t00002::B") }}'
        - |
          note right of {{ alias("D") }}
          {{ comment("D") }}
          end note